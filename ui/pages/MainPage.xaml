<Page x:Class="Memory.ui.pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Memory.ui.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Button Height="50px" Width="400px" Background="Orange" FontSize="20" Margin="0,145,0,255" >Play</Button>
        <Button Click="Scoreboard" Height="50px" Width="400px" Background="Orange" FontSize="20" >Scoreboard</Button>
        <Button Click="Settings" Height="50px" Width="400px" Background="Orange" FontSize="20" Margin="0,255,0,145">Settings</Button>
        <Button Click="Quit" Height="50px" Width="400px" Background="Orange" FontSize="20" Margin="0,365,0,145">Quit</Button>
    </Grid>
</Page>
